{
  "version": 2,
  "public": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.myshopify.com https://admin.shopify.com"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://*.myshopify.com"
        }
      ]
    }
  ]
}
